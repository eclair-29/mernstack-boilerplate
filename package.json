{
  "name": "mernstack-boilerplate",
  "version": "1.0.0",
  "description": "a boilerplate for starting a new mernstack project",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm start --prefix client",
    "client-install": "npm install --prefix client",
    "server": "nodemon server.js",
    "start": "node server.js"
  },
  "author": "eclair-29",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "nodemon": "^1.18.10"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongoose": "^5.4.18"
  }
}
